{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "isolatedModules": true,
        "noImplicitReturns": true,
        "outDir": "./build",
        "pretty": true,
        "target": "ES2017",
        "strict": true,
        "diagnostics": true,
        "extendedDiagnostics": true,
        "moduleResolution": "node",
        "module": "esnext",
        "generateCpuProfile": "./log/profile.cpuprofile",
        "listEmittedFiles": true,
        "listFiles": true,
        "paths": {
            "@components/*":[
                "./src/components/*"
            ],
            "@images/*":[
                "./src/images/img/*"
            ],
            "@css":[
                "./src/app.css"
            ],
            "@bs-icons/*":[
                "./node_modules/bootstrap-icons/icons/*"
            ]
        }
    },
    "include": [
        "./src/typescript/**/*.ts"
    ],
    "exclude": [
        "/node_modules",
        "/build",
        "/out"
    ],
    "buildOptions": {
        "verbose": true
    }
}